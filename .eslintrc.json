{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@babel/eslint-parser", //Ajouter pour supporter le "import ... with { type: 'json' }"
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "requireConfigFile": false
    },  
    "rules": {
        "indent" : ["error", "tab"],
        "no-tabs" : "off",
        "semi": [2, "always"]
    },
    "globals": {
    }
}